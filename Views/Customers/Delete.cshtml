@model Progra3_TPFinal_19B.Models.Customer
@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="card">
    <div class="card-header bg-light">¿Eliminar cliente?</div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            <dt class="col-sm-3">Documento</dt>
            <dd class="col-sm-9">@Model.DocumentNumber</dd>
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Model.Phone</dd>
            <dt class="col-sm-3">Creado</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime()</dd>
        </dl>

        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">Sí, eliminar</button>
        </form>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
    </div>
</div>

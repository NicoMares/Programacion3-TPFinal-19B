@model IEnumerable<Progra3_TPFinal_19B.Models.Customer>
@{
    ViewData["Title"] = "Clientes";
}
<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Clientes</h2>
    <a asp-action="Create" class="btn btn-primary">Nuevo cliente</a>
</div>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-success">@TempData["Msg"]</div>
}

<div class="card">
    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead class="table-light">
                <tr><th>Nombre</th><th>Documento</th><th>Email</th><th>Teléfono</th><th>Creado</th><th>Acciones</th></tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Name</td>
                        <td>@c.DocumentNumber</td>
                        <td>@c.Email</td>
                        <td>@c.Phone</td>
                        <td>@c.CreatedAt.ToLocalTime()</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-primary">Editar</a>

                            <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>

                        </td>
                    </tr>
               
                }

            </tbody>
            
        </table>
    </div>
</div>

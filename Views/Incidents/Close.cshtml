@* Views/Incidents/Close.cshtml *@
@model Progra3_TPFinal_19B.Models.Incident
@{
    ViewData["Title"] = "Cerrar Incidencia";
}
<div class="card">
    <div class="card-header bg-light">Cerrar @Model.Number</div>
    <div class="card-body">
        <form asp-action="Close" method="post" class="row g-3">
            <input type="hidden" asp-for="Id" />
            <div class="col-12">
                <label asp-for="CloseComment" class="form-label">Comentario final de cierre</label>
                <textarea asp-for="CloseComment" class="form-control" rows="5" placeholder="Motivo de cierre..."></textarea>
                <span asp-validation-for="CloseComment" class="text-danger"></span>
                <div class="form-text">Campo obligatorio.</div>
            </div>
            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-dark">Cerrar</button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@* Views/Incidents/Details.cshtml *@
@model Progra3_TPFinal_19B.Models.ViewModels.IncidentDetailsViewModel
@{
    ViewData["Title"] = "Detalle Incidencia";
    var history = ViewBag.History as IEnumerable<Progra3_TPFinal_19B.Models.ViewModels.IncidentHistoryItemViewModel> ?? Enumerable.Empty<Progra3_TPFinal_19B.Models.ViewModels.IncidentHistoryItemViewModel>();
    bool locked = Model.State is "Resuelto" or "Cerrado";


    string prioBadge = Model.PriorityName switch
    {
        "Alta" => "bg-danger text-white",
        "Media" => "bg-warning text-dark",
        "Baja" => "bg-success text-white",
        _ => "bg-secondary text-white"
    };
    string stateBadge = Model.State switch
    {
        "Abierto" => "bg-secondary text-white",
        "Asignado" => "bg-primary text-white",
        "EnAnalisis" => "bg-info text-dark",
        "Resuelto" => "bg-success text-white",
        "Cerrado" => "bg-dark text-white",
        "Reabierto" => "bg-warning text-dark",
        _ => "bg-light text-dark"
    };
}
<div class="row g-3">
    <div class="col-lg-8">
        <div class="card incident-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">@Model.Number</h4>
                    <div class="d-flex gap-2">
                        <span class="badge @stateBadge">@Model.State</span>
                        <span class="badge @prioBadge">@Model.PriorityName</span>
                    </div>
                </div>

                <p class="text-muted mb-1">
                    Cliente:
                    <a asp-controller="Customers" asp-action="Details" asp-route-id="@Model.CustomerId">
                        @(!string.IsNullOrWhiteSpace(Model.CustomerName) ? Model.CustomerName : Model.CustomerId.ToString())
                    </a>
                </p>
                <p class="text-muted">
                    Tipo: @(!string.IsNullOrWhiteSpace(Model.TypeName) ? Model.TypeName : "—")
                    • Asignado a:
                    <a href="#">
                        @(!string.IsNullOrWhiteSpace(Model.AssignedToUsername) ? Model.AssignedToUsername : Model.AssignedToUserId.ToString())
                    </a>
                </p>

                <hr />
                <h6>Problemática</h6>
                <p>@Model.Problem</p>

               
            </div>
        </div>

        <div class="card mt-3" id="comments">
            <div class="card-header bg-light">Comentarios</div>
            <div class="card-body">
                @if (TempData["Err"] is string err && !string.IsNullOrWhiteSpace(err))
                {
                    <div class="alert alert-danger py-1 mb-3">@err</div>
                }
                @if (TempData["Ok"] is string ok && !string.IsNullOrWhiteSpace(ok))
                {
                    <div class="alert alert-success py-1 mb-3">@ok</div>
                }

                @if (Model.Comments?.Any() == true)
                {
                    foreach (var c in Model.Comments)
                    {
                        <div class="mb-3">
                            <div class="small text-muted">@c.CreatedAt.ToString("dd/MM/yyyy HH:mm") • por @c.AuthorUsername</div>
                            <div>@c.Text</div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted small mb-3">No hay comentarios registrados.</p>
                }

                <form asp-action="AddComment" method="post" class="mt-3">
                    <input type="hidden" name="incidentId" value="@Model.Id" />
                    <div class="input-group">
                        <input name="text" class="form-control" maxlength="2000" placeholder="Escribir un comentario..." />
                        <button class="btn btn-primary" type="submit">Agregar</button>
                    </div>
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header bg-light">Historial</div>
            <div class="card-body small">
                @if (history.Any())
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var h in history)
                        {
                            <li>
                                <strong>@h.Kind</strong> • @h.When.ToString("dd/MM/yyyy HH:mm") • por @h.Who
                                @if (!string.IsNullOrWhiteSpace(h.Detail))
                                {
                                    <span> — @h.Detail</span>
                                }
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <span class="text-muted">Sin eventos aún.</span>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header bg-light">Acciones rápidas</div>
            <div class="card-body">
                <a class="btn btn-outline-success btn-sm @(locked ? "disabled" : "")"
                   asp-action="Resolve" asp-route-id="@Model.Id"
                   aria-disabled="@(locked ? "true" : "false")"
                   title="@(locked ? "No disponible: incidencia " + Model.State : "Resolver")">
                    Resolver
                </a>

                <a class="btn btn-outline-dark btn-sm @(locked ? "disabled" : "")"
                   asp-action="Close" asp-route-id="@Model.Id"
                   aria-disabled="@(locked ? "true" : "false")"
                   title="@(locked ? "No disponible: incidencia " + Model.State : "Cerrar")">
                    Cerrar Incidencia
                </a>

                <a class="btn btn-outline-warning btn-sm @(locked ? "disabled" : "")"
                   asp-action="Reassign" asp-route-id="@Model.Id"
                   aria-disabled="@(locked ? "true" : "false")"
                   title="@(locked ? "No disponible: incidencia " + Model.State : "Reasignar")">
                    Reasignar
                </a>
            </div>
        </div>
    </div>
</div>

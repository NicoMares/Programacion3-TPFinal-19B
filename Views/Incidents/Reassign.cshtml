@* Views/Incidents/Reassign.cshtml *@
@model Progra3_TPFinal_19B.Models.ViewModels.IncidentReassignViewModel
@{
    ViewData["Title"] = "Reasignar Incidencia";
}
<div class="card">
    <div class="card-header bg-light">Reasignar @Model.Number</div>
    <div class="card-body">
        <form asp-action="Reassign" method="post" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="col-md-6">
                <label asp-for="AssignedToUserId" class="form-label">Asignar a</label>
                <select asp-for="AssignedToUserId" asp-items="Model.Users" class="form-select">
                    <option value="">-- Seleccionar usuario --</option>
                </select>
                <span asp-validation-for="AssignedToUserId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Reason" class="form-label">Motivo</label>
                <input asp-for="Reason" class="form-control" placeholder="Ej: carga de trabajo, especialidad..." />
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-warning">Reasignar</button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@* Views/Incidents/Resolve.cshtml *@
@model Progra3_TPFinal_19B.Models.Incident
@{
    ViewData["Title"] = "Resolver Incidencia";
}
<div class="card">
    <div class="card-header bg-light">Resolver @Model.Number</div>
    <div class="card-body">
        <form asp-action="Resolve" method="post" class="row g-3">
            <input type="hidden" asp-for="Id" />
            <div class="col-12">
                <label asp-for="ResolutionNote" class="form-label">Nota de resolución</label>
                <textarea asp-for="ResolutionNote" class="form-control" rows="5" placeholder="Detalle de la solución aplicada..."></textarea>
                <span asp-validation-for="ResolutionNote" class="text-danger"></span>
            </div>
            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-success">Resolver</button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

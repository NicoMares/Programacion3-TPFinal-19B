@* Views/Incidents/Index.cshtml (render robusto) *@
@model IEnumerable<Progra3_TPFinal_19B.Models.ViewModels.IncidentListItemViewModel>

<div class="card">
    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Cliente</th>
                    <th>Tipo</th>
                    <th>Prioridad</th>
                    <th>Estado</th>
                    <th>Asignado</th>
                    <th>Creado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Any() == true)
                {
                    foreach (var item in Model)
                    {
                        var prio = string.IsNullOrWhiteSpace(item.PriorityName) ? "—" : item.PriorityName;
                        var state = string.IsNullOrWhiteSpace(item.State) ? "—" : item.State;

                        var prioBadge = item.PriorityName switch
                        {
                            "Alta" => "bg-danger text-white",
                            "Media" => "bg-warning text-dark",
                            "Baja" => "bg-success text-white",
                            _ => "bg-secondary text-white"
                        };
                        var stateBadge = item.State switch
                        {
                            "Abierto" => "bg-secondary text-white",
                            "Asignado" => "bg-primary text-white",
                            "EnAnalisis" => "bg-info text-dark",
                            "Resuelto" => "bg-success text-white",
                            "Cerrado" => "bg-dark text-white",
                            "Reabierto" => "bg-warning text-dark",
                            _ => "bg-light text-dark"
                        };


                        <tr>
                            <td><a asp-action="Details" asp-route-id="@item.Id">@item.Number</a></td>
                            <td>@(string.IsNullOrWhiteSpace(item.CustomerName) ? "—" : item.CustomerName)</td>
                            <td>@(string.IsNullOrWhiteSpace(item.TypeName) ? "—" : item.TypeName)</td>
                            <td><span class="badge @prioBadge">@prio</span></td>
                            <td><span class="badge @stateBadge">@state</span></td>
                            <td>@(string.IsNullOrWhiteSpace(item.AssignedToUsername) ? "—" : item.AssignedToUsername)</td>
                            <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Ver</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="8" class="text-center text-muted py-4">No hay incidencias.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>

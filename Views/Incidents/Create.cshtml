@* Views/Incidents/Create.cshtml *@
@model Progra3_TPFinal_19B.Models.ViewModels.IncidentCreateViewModel
@{
    ViewData["Title"] = "Nueva Incidencia";
}
<div class="card">
    <div class="card-header bg-light">Nueva Incidencia</div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-6">
                <label asp-for="CustomerId" class="form-label">Cliente</label>
                <select asp-for="CustomerId" asp-items="Model.Customers" class="form-select">
                    <option value="">-- Seleccionar cliente --</option>
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="TypeId" class="form-label">Tipo</label>
                <select asp-for="TypeId" asp-items="Model.Types" class="form-select">
                    <option value="">-- Seleccionar tipo --</option>
                </select>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="PriorityId" class="form-label">Prioridad</label>
                <select asp-for="PriorityId" asp-items="Model.Priorities" class="form-select">
                    <option value="">-- Seleccionar prioridad --</option>
                </select>
                <span asp-validation-for="PriorityId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="AssignedToUserId" class="form-label">Asignar a</label>
                <select asp-for="AssignedToUserId" asp-items="Model.Users" class="form-select">
                    <option value="">-- Seleccionar usuario --</option>
                </select>
                <span asp-validation-for="AssignedToUserId" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Problem" class="form-label">Problemática</label>
                <textarea asp-for="Problem" class="form-control" rows="5" placeholder="Describí el problema..."></textarea>
                <span asp-validation-for="Problem" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label class="form-label">Adjuntos</label>
                <input asp-for="Files" type="file" multiple class="form-control" />
                <div class="form-text">Podés seleccionar varios archivos.</div>
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
